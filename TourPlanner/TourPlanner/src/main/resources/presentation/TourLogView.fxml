<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox minWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.controller.TourLogController">
    <HBox>
        <Label fx:id="logLabel" minWidth="-Infinity" text="Log view" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="addLogButton" onAction="#addLog" styleClass="editButton" text="+" />
        <Button fx:id="saveLogButton" onAction="#saveLog" styleClass="editButton" text="save" />
    </HBox>
   <HBox prefHeight="61.0" prefWidth="450.0" >
       <Pane minWidth="32" />
       <Label minWidth="110" text="Date" />
       <Label minWidth="110" text="Comment" />
       <Label minWidth="110" text="Difficulty" />
       <Label minWidth="110" text="Total Time" />
       <Label minWidth="110" text="Rating" />
   </HBox>
    <HBox>
        <ListView fx:id="listView" layoutX="5.0" layoutY="3.0" prefHeight="400.0" prefWidth="700.0" />
    </HBox>
</VBox>
