<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns:fx="http://javafx.com/fxml" fx:id="box" fx:controller="presentation.controller.TourItemController">
    <children>
        <Label  fx:id="name" style="-fx-label-padding: 10; -fx-alignment: center-left"/>
        <Label  fx:id="price" style="-fx-label-padding: 10; -fx-alignment: center-left"/>
        <Region HBox.hgrow="ALWAYS"></Region>
        <Button text="delete" onAction="#onDeleteTour" style="-fx-label-padding: 10; -fx-alignment: center-right" />
    </children>
</HBox>
